{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "id":"mongo-slave-2",
   "metadata":{
      "name":"mongo-slave-2",
      "labels":{
         "app":"mongo",
         "role":"slave-2"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "app":"mongo",
         "role":"slave-2"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"mongo",
               "role":"slave-2"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"mongo-slave-2",
                  "image":"mongo",
				  "args":["--replSet","rs0"],
                  "ports":[
                     {
                        "name":"mongo-slave-2",
                        "containerPort":27017
                     }
                  ]
               }
            ]
         }
      }
   }
}
